@model IEnumerable<WebApplication10.Models.User>
@{
    ViewBag.Title = "List Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 style=" text-align:center">List Account</h2>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Account <b>Management</b></h2>
                    </div>
                    <div class="col-sm-7">
                        <a asp-action="Create" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New Account</span></a>
                        @* <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE24D;</i> <span>Export to Excel</span></a> *@
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        @* <th>
                            @Html.DisplayNameFor(model => model.Password)
                        </th> *@

                        <th>
                            Status
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @* @Html.DisplayFor(modelItem => item.Password) *@
                                Active
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="settings" title="Settings" data-toggle="tooltip"><i class="material-icons">&#xE8B8;</i></a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.UserId">Details</a>
                            </td>

                         
                        </tr>
                    }

                </tbody>
            </table>
            <div class="clearfix">

                <ul class="pagination">

                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item "><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>