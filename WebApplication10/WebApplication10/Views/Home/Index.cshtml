@model IEnumerable<WebApplication10.Models.CourseAssignment>

@{
    ViewBag.Title = "Courses and Teachers";
	Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>Courses and Teachers</h2>

<!-- CONTENT -->
<section id="content">
	<!-- NAVBAR -->
	<nav>
		<i class='bx bx-menu'></i>
		<a href="#" class="nav-link">Education - BTEC FPT</a>

		@* search *@
		<form action="#">
			<div class="form-input">
				<input type="search" placeholder="Search...">
				<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
			</div>
		</form>

		<input type="checkbox" id="switch-mode" hidden>

		<label for="switch-mode" class="switch-mode"></label>

		<!-- thong báo-->
		<a href="#" class="notification">
			<i class='bx bxs-bell'></i>
			<span class="num">8</span>
		</a>
		<a href="#" class="profile">
			<img src="~/Student_Template/img/thong.jpg">
		</a>
	</nav>
	<!-- NAVBAR -->
	<!-- MAIN -->
	<main>
		
			

		<!-- cut -->
		<ul class="box-info">
			<li>
				<i class='bx bxs-calendar-check'></i>
				<span class="text">
					<h3>55</h3>
					<p> The Courses</p>
				</span>
			</li>
			<li>
				<i class='bx bxs-group'></i>
				<span class="text">
					<h3>25</h3>
					<p>Total Teacher</p>
				</span>
			</li>
			<li>
				<i class='bx bxs-dollar-circle'></i>
				<span class="text">
					<h3>$ ??? </h3>
					<p>Tuition </p>
				</span>
			</li>
		</ul>


		<div class="table-data">
			<div class="order">
				<div class="head">
					<h3></h3>
					<i class='bx bx-search'></i>
					<i class='bx bx-filter'></i>
				</div>
				<table style="text-align:center">
					<!--================================-->
					<thead>
						<tr>
							<th>Course Name</th>
							<th style="text-align:center">Teacher Name</th>
							<th style="text-align:center">Status</th>
							<th style="text-align:center">View Student in Course</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var courseAssignment in Model)
						{
							<tr>
								<td>@courseAssignment.Course.CourseName</td>
								<td>@courseAssignment.Teacher.Name</td>
								<td><span class="status text-success">&bull;</span> Active</td>
								<td>
									<a style="display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #007BFF;
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;" href="@Url.Action("StudentsInCourse", "Home", new { courseId = courseAssignment.CourseId })" class="btn btn-primary">
										View
									</a>
								</td>
							</tr>
						}
					</tbody>

				</table>

			</div>
			<!--
			<div class="todo">
				<div class="head">
					<h3>Todos</h3>
					<i class='bx bx-plus'></i>
					<i class='bx bx-filter'></i>
				</div>

				<ul class="todo-list">
					<li class="completed">
						<p>Todo List</p>
						<i class='bx bx-dots-vertical-rounded'></i>
					</li>
				</ul>
			</div>
			-->
		</div>
	</main>
	<!-- MAIN -->
</section>
<!-- CONTENT -->